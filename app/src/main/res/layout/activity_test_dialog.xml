<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_single_choice_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单选菜单"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="11dp" />
    <Button
        android:id="@+id/id_multi_choice_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多选菜单"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="11dp" />


    <Button
        android:id="@+id/one_button_base_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一个按钮"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="59dp" />
    <Button
        android:id="@+id/two_button_base_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="两个按钮"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="59dp" />
    <Button
        android:id="@+id/three_button_base_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三个按钮"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="59dp" />

    <Button
        android:id="@+id/id_no_tip_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不再提醒"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="59dp" />

    <Button
        android:id="@+id/id_dialog_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有输入框"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="59dp" />


    <Button
        android:id="@+id/id_dialog_only_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有输入框"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="59dp" />

    <Button
        android:id="@+id/id_dialog_input_single_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单选框系统Alert"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="59dp" />



</LinearLayout>