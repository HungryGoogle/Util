<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:textSize="22sp"
        android:textColor="#333333"
        android:text="demo title" />


    <TextView
        android:id="@+id/id_popup_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:textColor="#666666"
        android:textSize="18sp"
        android:text="demo sub title" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="left"
        android:id="@+id/id_all_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_button_popup_cancel"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#333333"
            android:background="@drawable/btn_bg_selector"
            android:text="取消"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/id_button_popup_ok"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#333333"
            android:background="@drawable/btn_bg_selector"
            android:text="确定"
            android:textSize="18sp"/>
    </LinearLayout>


</LinearLayout>